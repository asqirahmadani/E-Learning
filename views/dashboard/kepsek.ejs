      async function editKelas(kelasId) {
         const kelas = kelasData.find(k => k.id === kelasId);
         if (!kelas) return;

         const newNama = prompt('Edit Nama Kelas:', kelas.nama);
         if (!newNama) return;

         const newTingkat = prompt('Edit Tingkat:', kelas.tingkat);
         if (!newTingkat) return;

         try {
            const response = await fetch(`/kepsek/kelas/${kelasId}`, {
               method: 'PUT',
               headers: {
                  'Content-Type': 'application/json'
               },
               credentials: 'include',
               body: JSON.stringify({
                  nama: newNama.trim(),
                  tingkat: newTingkat.trim()
               })
            });

            if (response.ok) {
               showAlert('Kelas berhasil diupdate!');
               loadKelasManagement();
            } else {
               const error = await response.json();
               showAlert('Error: ' + error.error, 'error');
            }
         } catch (error) {
            console.error('Error updating kelas:', error);
            showAlert('Terjadi kesalahan saat mengupdate kelas', 'error');
         }
      }

